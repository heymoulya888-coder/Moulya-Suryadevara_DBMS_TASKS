[10:26 PM, 11/5/2025] Moulya Suryadevara: -- ============================================================
--  DATABASE DESIGN FOR HEALTHCARE MANAGEMENT SYSTEM
-- Used for Oracle Forms, Menus, and Report Builder
-- Step 1: Create Table - Department
CREATE TABLE Department (
    DepartmentID NUMBER(5) PRIMARY KEY,
    DeptName VARCHAR2(50),
    Location VARCHAR2(50)
);

-- Step 2: Create Table - Doctor
CREATE TABLE Doctor (
    DoctorID NUMBER(5) PRIMARY KEY,
    Name VARCHAR2(50),
    Specialization VARCHAR2(50),
    ContactNo VARCHAR2(15),
    DepartmentID NUMBER(5),
    FOREIGN KEY (DepartmentID) REFERENCES Department(DepartmentID)
);

-- Step 3: Create Table - Patient
CREATE TABLE Patient (
    PatientID NUMBER(5) PRIMARY KEY,
    Name VARCHAR2(50),
    Age NUMBER(3),
    Gender VARCHAR2(10),
    Phone VARCHAR2(15),
    Address VARCHAR2(100)
);

-- Step 4: Create Table - Appointment
CREATE TABLE Appointment (
    AppointmentID NUMBER(5) PRIMARY KEY,
    PatientID NUMBER(5),
    DoctorID NUMBER(5),
    AppointmentDate DATE,
    AppointmentTime VARCHAR2(10),
    FOREIGN KEY (PatientID) REFERENCES Patient(PatientID),
    FOREIGN KEY (DoctorID) REFERENCES Doctor(DoctorID)
);

-- Step 5: Create Table - Prescription
CREATE TABLE Prescription (
    PrescriptionID NUMBER(5) PRIMARY KEY,
    AppointmentID NUMBER(5),
    Diagnosis VARCHAR2(100),
    Notes VARCHAR2(100),
    FOREIGN KEY (AppointmentID) REFERENCES Appointment(AppointmentID)
);

-- Step 6: Create Table - Medicine
CREATE TABLE Medicine (
    MedicineID NUMBER(5) PRIMARY KEY,
    Name VARCHAR2(50),
    Dosage VARCHAR2(20),
    Manufacturer VARCHAR2(50)
);

-- Step 7: Create Junction Table - Prescription_Medicine
CREATE TABLE Prescription_Medicine (
    PrescriptionID NUMBER(5),
    MedicineID NUMBER(5),
    PRIMARY KEY (PrescriptionID, MedicineID),
    FOREIGN KEY (PrescriptionID) REFERENCES Prescription(PrescriptionID),
    FOREIGN KEY (MedicineID) REFERENCES Medicine(MedicineID)
);
