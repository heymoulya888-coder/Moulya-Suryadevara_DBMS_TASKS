-- 1. List all appointments with doctor and patient details
SELECT a.AppointmentID, p.Name AS PatientName, d.Name AS DoctorName, 
       a.AppointmentDate, a.AppointmentTime
FROM Appointment a
JOIN Patient p ON a.PatientID = p.PatientID
JOIN Doctor d ON a.DoctorID = d.DoctorID;

-- 2. List prescriptions with medicine details
SELECT pr.PrescriptionID, p.Name AS PatientName, m.Name AS MedicineName, m.Dosage
FROM Prescription pr
JOIN Appointment a ON pr.AppointmentID = a.AppointmentID
JOIN Patient p ON a.PatientID = p.PatientID
JOIN Prescription_Medicine pm ON pr.PrescriptionID = pm.PrescriptionID
JOIN Medicine m ON pm.MedicineID = m.MedicineID;

-- 3. Count total number of patients in each department
SELECT d.DeptName, COUNT(a.PatientID) AS TotalPatients
FROM Department d
JOIN Doctor doc ON d.DepartmentID = doc.DepartmentID
JOIN Appointment a ON doc.DoctorID = a.DoctorID
GROUP BY d.DeptName;
DECLARE
    v_age NUMBER;
BEGIN
    SELECT Age INTO v_age FROM Patient WHERE PatientID = 11;
    IF v_age < 18 THEN
        DBMS_OUTPUT.PUT_LINE('Patient is a minor.');
    ELSE
        DBMS_OUTPUT.PUT_LINE('Patient is an adult.');
    END IF;
END;
